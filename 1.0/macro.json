    "GetMacroConfigurationsRequest": {
      "type": "object",
      "properties": {}
    },
    "MacroRegister": {
      "type": "object",
      "properties": {
        "MacroId": {
          "format": "int32",
          "type": "integer"
        },
        "ApplicationName": {
          "type": "string"
        },
        "MacroName": {
          "type": "string"
        },
        "FriendlyName": {
          "type": "string"
        },
        "Enabled": {
          "type": "boolean"
        },
        "Started": {
          "format": "date-time",
          "type": "string"
        },
        "Completed": {
          "format": "date-time",
          "type": "string"
        },
        "Executing": {
          "type": "boolean"
        },
        "CurrentState": {
          "type": "string"
        },
        "Parameters": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/MacroParameter"
          }
        },
        "Specification": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/NamedScheduleConfiguration"
          }
        },
        "TimeZoneOffset": {
          "format": "double",
          "type": "number"
        },
        "MacroType": {
          "type": "string"
        },
        "Migrated": {
          "format": "int32",
          "description": "DST migration flag.\r\n<remarks>\r\n 0 - not migrated;\r\n 1 - migrated;\r\n 2 - migration failed;\r\n</remarks>",
          "type": "integer"
        }
      }
    },
    "MacroParameter": {
      "type": "object",
      "properties": {
        "MacroId": {
          "format": "int32",
          "type": "integer"
        },
        "ParameterName": {
          "type": "string"
        },
        "ParameterValue": {
          "type": "string"
        },
        "IsSecure": {
          "type": "boolean"
        }
      }
    },
    "NamedScheduleConfiguration": {
      "description": "ScheduleConfiguration is shared between schduled macros and imports (I expect there is also a variety for exports)\r\nWithin imports there is a Schedule class which contains a Name property but it is an import specfic class and reuse would require changes to the underlying macro data structure\r\nHence NamedScheduleConfiguration - written for use by Macros but hopefully we'll be able to move all scheduling into the namespace eventually",
      "type": "object",
      "properties": {
        "Name": {
          "description": "User visible name for a schedule configuration",
          "type": "string"
        },
        "RepetitionType": {
          "description": "Just one time or recurrent",
          "enum": [
            "OneTime",
            "Recurrent"
          ],
          "type": "string"
        },
        "OneTimeDate": {
          "format": "date-time",
          "type": "string"
        },
        "DailyFrequency": {
          "description": "If is recurrent. Occurs daily or weekly?",
          "enum": [
            "Daily",
            "Weekly"
          ],
          "type": "string"
        },
        "OccursFrequencyStartingDate": {
          "format": "date-time",
          "type": "string"
        },
        "OccursFrequencyEveryX": {
          "format": "int32",
          "description": "If recurrent, occurs each X times the quantity of 'DailyFrequency' (each 1 day, each 5 days, each 3 weeks, etc...)",
          "type": "integer"
        },
        "WeeklyDays": {
          "description": "If recurrent weekly, indicate what days (i.e '12' -&gt; Monday and Tuesday )",
          "type": "string"
        },
        "OccursFrequency": {
          "description": "If is recurrent, occurs just one time each time, or multiple time (one time each 3 days, or each hour each 3 days)",
          "enum": [
            "OneTime",
            "Recurrent"
          ],
          "type": "string"
        },
        "OccursOnceAtTime": {
          "description": "If recurrent but just one time each time, what time?",
          "type": "string"
        },
        "OccursEveryHours": {
          "format": "int32",
          "description": "If recurrent but several times each time, each how many hours",
          "type": "integer"
        },
        "StartingTime": {
          "description": "If recurrent and several times each time, starting when?",
          "type": "string"
        },
        "EndingTime": {
          "description": "If recurrent and several times each time, ending when?",
          "type": "string"
        },
        "Enabled": {
          "description": "Is enabled? NB : with macro schedules this property is not used (enabled exists higher in the data structure).",
          "type": "boolean"
        }
      }
    }
  },
